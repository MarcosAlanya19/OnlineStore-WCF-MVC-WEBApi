@model List<TiendaOnline.MVC.Models.AuditoriaProducto>

@{
    ViewData["Title"] = "Auditoría de Productos";
}

<div class="container mt-4">
    <h1 class="display-4"><i class="bi bi-file-earmark-text-fill"></i> Auditoría de Productos</h1>

    <div class="card shadow mt-3">
        <div class="card-body table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Producto</th>
                        <th>Acción</th>
                        <th>Nombre Anterior</th>
                        <th>Nombre Nuevo</th>
                        <th>Precio Anterior</th>
                        <th>Precio Nuevo</th>
                        <th>Stock Anterior</th>
                        <th>Stock Nuevo</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdAuditoria</td>
                                <td>@item.IdProducto</td>
                                <td>@item.Accion</td>
                                <td>@item.NombreAnterior</td>
                                <td>@item.NombreNuevo</td>
                                <td>@item.PrecioAnterior?.ToString("N2")</td>
                                <td>@item.PrecioNuevo?.ToString("N2")</td>
                                <td>@item.StockAnterior</td>
                                <td>@item.StockNuevo</td>
                                <td>@item.FechaAccion.ToString("g")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="text-muted mt-2">No hay registros de auditoría</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
