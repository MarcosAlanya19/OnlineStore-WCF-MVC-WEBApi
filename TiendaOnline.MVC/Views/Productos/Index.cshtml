@model IEnumerable<TiendaOnline.MVC.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-bag-fill"></i> Productos
            </h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Producto
            </a>
            <a asp-controller="Auditoria" asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                <i class="bi bi-journal-text"></i> Ver Auditoría
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Categoría</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdProducto</td>
                                    <td><strong>@item.Nombre</strong></td>
                                    <td>@item.Descripcion</td>
                                    <td class="text-success fw-bold">S/. @item.Precio.ToString("N2")</td>
                                    <td>
                                        @if (item.Stock > 10)
                                        {
                                            <span class="badge bg-success">@item.Stock unidades</span>
                                        }
                                        else if (item.Stock > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@item.Stock unidades</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Agotado</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Categoria</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IdProducto" 
                                               class="btn btn-sm btn-info" title="Ver Detalles">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.IdProducto" 
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdProducto" 
                                               class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="bi bi-inbox fs-1 text-muted"></i>
                                    <p class="text-muted mt-2">No hay productos registrados</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}